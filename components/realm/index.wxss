
.container {
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #ffffff;
}

.sku-preview{
    display:flex;
    flex-direction:row;
    margin-bottom: 20rpx;
}

.sku-description{
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.sku-price{
    display:flex;
    flex-direction:row;
}

.discount-price{
    margin-left: 20rpx;
}

.sku-padding{
    font-size: 20rpx;
}

.sku-padding text:first-child{
    color: #999999;
}

.sku-padding text:nth-child(2){
    color: #666666;
}

.hr{
    width: 100%;
    height: 2rpx;
    background-color: #E9E9E9;
}

.stock{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.stock-pinch{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}

.counter-container{
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: space-between;
    margin-bottom: 200rpx;
}
