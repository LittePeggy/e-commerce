.container{
    display:flex;
    flex-direction:column;
    background-color: #ffffff;
    box-shadow: 0px 0px 8px 0px rgb(119, 163, 149, 0.2);
    margin-bottom: 30rpx;
}

.img{
    width: 100%;
}

.inner-container{
    width: 340rpx;
    display:flex;
    flex-direction:column;
    padding: 15rpx 10rpx 10rpx 10rpx;
}

.title{
    font-size: 28rpx;
    color: #333333;
}

.tag{
    background-color: #DCEBE6;
    color: #157658;
    height: 36rpx;
    padding-right: 6rpx;
}