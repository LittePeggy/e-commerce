.container{
    display:flex;
    flex-direction:column;
    background-color: #ffffff;
    box-shadow: 0px 0px 8px 0px rgb(119, 163, 149, 0.2);
    margin-bottom: 30rpx;
}

.img{
    width: 100%;
    height: 360rpx;
}

.inner-container{
    width: 340rpx;
    display:flex;
    flex-direction:column;
    padding: 15rpx 10rpx 10rpx 10rpx;
    background-color: #ffffff;
}

.title{
    font-size: 28rpx;
    color: #333333;
}

.tags{
    display:flex;
    flex-direction:row;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
    flex-wrap: wrap;
}

.tag{
    background-color: #DCEBE6;
    color: #157658;
    height: 36rpx;
    padding-right: 6rpx;
}

.spu-price{
    display:flex;
    flex-direction:row;
}

.discount-price{
    margin-left: 20rpx;
}

.subtitle{
    font-size: 24rpx;
    color: #888888;
    font-weight: 300;
    margin-top: 6rpx;
}