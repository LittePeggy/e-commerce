<view class="container">
    <image class="img" src="{{data.img}}" ></image>
    <view class="inner-container">
        <text class="title">{{data.title}}</text>
        <block wx:for="{{tags}}" >
            <l-tag l-class="tag" size="super-mini" >{{item}}</l-tag>
        </block>
        <l-price value="{{data.price}}"></l-price>
        <l-price value="{{data.discount_price}}"></l-price>
        <text>{{data.subtitle}}</text>
    </view>
</view>